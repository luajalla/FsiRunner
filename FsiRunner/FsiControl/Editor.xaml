<UserControl x:Class="ClearLines.FsiControl.Editor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:avalonEdit="http://icsharpcode.net/sharpdevelop/avalonedit"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" FontFamily="Segoe UI">

    <DockPanel>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <!--Menu Row-->
            <Border Background="Gray" Grid.Row="0">
                <StackPanel                     
                    HorizontalAlignment="Right"
                    Orientation="Horizontal" 
                    Background="Gray">
                    <TextBlock 
                        Text="Font Size" 
                        FontSize="13"
                        Margin="3"
                        Foreground="White"
                        VerticalAlignment="Center"/>
                    <Button 
                        Command="{Binding IncreaseFontSize}" 
                        Content="+"
                        Width="25" 
                        Height="25" 
                        Background="Black" 
                        Foreground="White"/>
                    <Button 
                        Command="{Binding DecreaseFontSize}"
                        Content="-"
                        Width="25" 
                        Height="25" 
                        Background="Black" 
                        Foreground="White"/>
                </StackPanel>
            </Border>
            <!--End of Menu Row-->

            <!--Editor section -->
            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <DockPanel Grid.Row="0">

                    <!--Menu of codeblocks actions-->
                    <Border DockPanel.Dock="Bottom" Background="Gray">
                        <StackPanel                
                            HorizontalAlignment="Right"
                            Orientation="Horizontal">
                            <Button
                                Command="{Binding AddCodeBlock}"
                                Content="+"
                                FontSize="12"
                                Background="Black"
                                Foreground="White"
                                Height="25"
                                Width="25"/>
                        </StackPanel>
                    </Border>
                    <!--End of Menu of codeblocks actions-->

                    <!--Code entry area-->
                    <ScrollViewer HorizontalScrollBarVisibility="Hidden">
                        <StackPanel>
                            <!--List of "Code Blocks"-->
                            <ListView ItemsSource="{Binding CodeBlocks}" 
                                  ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                  HorizontalContentAlignment="Stretch">
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <Expander IsExpanded="True">
                                            <Border 
                                                BorderBrush="Gray" 
                                                BorderThickness="0,1,0,3"
                                                Padding="2"
                                                Margin="2">
                                                <StackPanel>
                                                    <avalonEdit:TextEditor 
                                                        Document="{Binding Document}"
                                                        Name="textEditor"
                                                        ShowLineNumbers="True"
                                                        FontFamily="Consolas"
                                                        FontSize="{Binding FontSize}"
                                                        SyntaxHighlighting="{Binding Highlighting}"
                                                        KeyDown="OnKeyDown"
                                                        
                                                        HorizontalScrollBarVisibility="Auto"
                                                        VerticalScrollBarVisibility="Auto">
                                                        <avalonEdit:TextEditor.Options>
                                                            <avalonEdit:TextEditorOptions ConvertTabsToSpaces="True" IndentationSize="4" />
                                                        </avalonEdit:TextEditor.Options>
                                                    </avalonEdit:TextEditor>
                                                    <Border Background="LightGray">
                                                        <Button
                                                            Command="{Binding Run}"
                                                            HorizontalAlignment="Right"
                                                            Content="Run" 
                                                            FontSize="9"
                                                            Background="Red"
                                                            Foreground="White"
                                                            Height="25"
                                                            Padding="2"/>
                                                    </Border>
                                                </StackPanel>
                                            </Border>
                                        </Expander>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                            <!--End of List of "Code Blocks"-->                            
                        </StackPanel>
                    </ScrollViewer>
                    <!--End of Code entry area-->

                </DockPanel>

                <!--Splitter to expand / reduce the size of code blocks vs. feedback-->
                <GridSplitter 
                    Grid.Row ="1" 
                    Background="Gray" Height="5"
                    ResizeDirection="Rows"
                    HorizontalAlignment="Stretch" 
                    VerticalAlignment="Top"/>

                <!--List of "Feedback" responses from FSI-->
                <ListView 
                    Grid.Row="1" 
                    ItemsSource="{Binding FeedbackBlocks}" 
                    ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                    HorizontalContentAlignment="Stretch"
                    Margin="0,5,0,0">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <TextBlock  
                            Text="{Binding Result}"
                            TextWrapping="Wrap"
                            FontFamily="Consolas"
                            Background="LightGray"
                            FontSize="{Binding FontSize}"/>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
                <!--End of the List of "Feedback" responses from FSI-->

            </Grid>
            <!--End of Editor section -->

        </Grid>
    </DockPanel>
</UserControl>